<!DOCTYPE html>
<html>
<head>
  <title>Liste des utilisateurs</title>
  <link rel="stylesheet" href="/contenu/styles.css">
</head>
<body>
  <h1>Liste des utilisateurs</h1>
  <table>
    <tr>
      <th>Nom</th>
      <th>Email</th>
      <th>Action</th>
    </tr>
    <% users.forEach(user => { %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td>
          <form action="/delete/<%= user.id %>" method="POST" onsubmit="return confirm('ÃŠtes-vous sÃ»r de vouloir supprimer cet utilisateur ?');">
            <button type="submit">Supprimer</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </table>

  <h2>Ajouter un nouvel utilisateur</h2>
  <!-- ... Votre formulaire d'ajout d'utilisateur ici ... -->
  <form action="/save" method="POST">
    <label for="name">Nom :</label>
    <input type="text" id="name" name="name" required>

    <label for="email">Email :</label>
    <input type="email" id="email" name="email" required>

    <button type="submit">Enregistrer</button>
  </form>
</body>
</html>
